<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backgrnd"
    tools:context="com.marskyer.tuski.moonfinder.features_menu">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/cartoon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp"
        android:weightSum="1">

        <Button
            android:layout_width="100dp"
            android:layout_height="58dp"

            android:background="@drawable/gallery_icon"
            android:id="@+id/btn_pic"
            android:layout_gravity="right" />

        <Button
            android:layout_width="114dp"
            android:layout_height="60dp"


            android:background="@drawable/add_to_favorites"
            android:id="@+id/btn_favroite"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.10" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/story_btn"
            android:background="@drawable/book_image"
            android:layout_gravity="right" />
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="58dp"

        android:id="@+id/lern_btn"
        android:background="@drawable/book"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="112dp"
        android:layout_height="70dp"

        android:background="@drawable/vido"
        android:id="@+id/btn_video"

        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/lern_btn"
        android:layout_alignEnd="@+id/lern_btn"
        android:layout_marginBottom="53dp" />


</RelativeLayout>
